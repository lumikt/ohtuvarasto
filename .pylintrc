[MASTER]

ignore=tests

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring

[BASIC]
include-naming-hint=True
[FORMAT]
max-line-length=80

[REFACTORING]
max-nested-block=2

[DESIGN]
max-statements=15